<!-- main page -->
<div class="col-sm-9">
  <div class="col-sm-6 text-justify">
    <%= t 'content.primary_text_html' %>
    <%= t 'content.secondary_text_html' %>
  </div>
  <div class="col-sm-6">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">

        <div class="item active">
          <img class="img-responsive center-block" src="img/1.jpg" alt="Chania" width="460" height="345">
          <div class="carousel-caption">
            <h3><%= t 'content.carousel.img1_name' %></h3>
            <p><%= t 'content.carousel.img1_desc' %></p>
          </div>
        </div>

        <div class="item">
          <img class="img-responsive center-block" src="img/2.jpg" alt="Chania" width="460" height="345">
          <div class="carousel-caption">
            <h3><%= t 'content.carousel.img2_name' %></h3>
            <p><%= t 'content.carousel.img2_desc' %></p>
          </div>
        </div>
      
        <div class="item">
          <img class="img-responsive center-block" src="img/3.jpg" alt="Flower" width="460" height="345">
          <div class="carousel-caption">
            <h3><%= t 'content.carousel.img3_name' %></h3>
            <p><%= t 'content.carousel.img3_desc' %></p>
          </div>
        </div>

        <div class="item">
          <img class="img-responsive center-block" src="img/4.jpg" alt="Flower" width="460" height="345">
          <div class="carousel-caption">
            <h3><%= t 'content.carousel.img4_name' %></h3>
            <p><%= t 'content.carousel.img4_desc' %></p>
          </div>
        </div>
    
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>