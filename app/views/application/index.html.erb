<!-- wraping for footer -->
<div class="wrap">
  <div class="jumbotron">
    <h1 class="text-center"><%= t 'header.name' %></h1>      
    <p class="text-center"><%= t 'header.text' %></p>
  </div>
  <div class="container-fluid">
    <div class="row">
      <!-- side menu -->
      <!-- pills - data-toggle="pill" href="#type1" && content-->
      <div class="col-sm-3">
        <div class="panel-group" id="accordion">
          <!-- main link -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="pill" href="#main">
                  <%= t 'menu.main' %>
                </a>
              </h4>
            </div>
          </div>
          <!-- catalog -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                  <%= t 'menu.catalog' %>
                </a>
              </h4>
            </div>
            <div id="collapse2" class="panel-collapse collapse">
              <ul class="list-group">
                <li class="list-group-item">
                  <a data-toggle="pill" href="#type1">type1 </a><span class="badge">12</span>
                </li>
                <li class="list-group-item">
                  <a data-toggle="pill" href="#type2">type2 </a><span class="badge">5</span>
                </li>
                <li class="list-group-item">
                  <a data-toggle="pill" href="#type3">type3 </a><span class="badge">3</span>
                </li>
              </ul>
            </div>
          </div>
          <!-- about product -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                  <%= t 'menu.about_p' %>
                </a>
              </h4>
            </div>
            <div id="collapse3" class="panel-collapse collapse">
              <ul class="list-group">
                <li class="list-group-item">
                  <a data-toggle="pill" href="#usability"><%= t 'menu.practice' %></a>
                </li>
                <li class="list-group-item">
                  <a data-toggle="pill" href="#prop"><%= t 'menu.useful' %></a>
                </li>
              </ul>
            </div>
          </div>
          <!-- price -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="pill" href="#price">
                  <%= t 'menu.price' %>
                </a>
              </h4>
            </div>
          </div>
          <!-- contacts -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse5">
                  <%= t 'menu.contacts' %>
                </a>
              </h4>
            </div>
            <div id="collapse5" class="panel-collapse collapse">
              <ul class="list-group">
                <li class="list-group-item">
                  <a data-toggle="pill" href="#place"><%= t 'menu.map' %></a>
                </li>
                <li class="list-group-item">
                  <a data-toggle="pill" href="#about"><%= t 'menu.info' %></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- content -->
      <div class="tab-content">
        <!-- main page -->
        <div id="main" class="tab-pane fade in active">
          <div class="col-sm-9">
            <div class="col-sm-6 text-justify">
              <%= t 'content.primary_text_html' %>
              <%= t 'content.secondary_text_html' %>
            </div>
            <div class="col-sm-6">
              <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                  <li data-target="#myCarousel" data-slide-to="2"></li>
                  <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">

                  <div class="item active">
                    <img class="img-responsive center-block" src="img/1.jpg" alt="Chania" width="460" height="345">
                    <div class="carousel-caption">
                      <h3><%= t 'content.carousel.img1_name' %></h3>
                      <p><%= t 'content.carousel.img1_desc' %></p>
                    </div>
                  </div>

                  <div class="item">
                    <img class="img-responsive center-block" src="img/2.jpg" alt="Chania" width="460" height="345">
                    <div class="carousel-caption">
                      <h3><%= t 'content.carousel.img2_name' %></h3>
                      <p><%= t 'content.carousel.img2_desc' %></p>
                    </div>
                  </div>
                
                  <div class="item">
                    <img class="img-responsive center-block" src="img/3.jpg" alt="Flower" width="460" height="345">
                    <div class="carousel-caption">
                      <h3><%= t 'content.carousel.img3_name' %></h3>
                      <p><%= t 'content.carousel.img3_desc' %></p>
                    </div>
                  </div>

                  <div class="item">
                    <img class="img-responsive center-block" src="img/4.jpg" alt="Flower" width="460" height="345">
                    <div class="carousel-caption">
                      <h3><%= t 'content.carousel.img4_name' %></h3>
                      <p><%= t 'content.carousel.img4_desc' %></p>
                    </div>
                  </div>
              
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Catalog type 1 -->
        <div id="type1" class="tab-pane fade">
          Usability here
        </div>

        <!-- Catalog type 2 -->
        <div id="type2" class="tab-pane fade">
          Usability here
        </div>

        <!-- Catalog type 3 -->
        <div id="type3" class="tab-pane fade">
          Usability here
        </div>

        <!-- Product description usability -->
        <div id="usability" class="tab-pane fade">
          Usability here
        </div>

        <!-- Product description useful properties -->
        <div id="prop" class="tab-pane fade">
          Properties here
        </div>

        <!-- Price page -->
        <div id="price" class="tab-pane fade">
          Price here
        </div>

        <!-- Conacts how to find us -->
        <div id="place" class="tab-pane fade">
          Map here
        </div>

        <!-- Contacts about us -->
        <div id="about" class="tab-pane fade">
          Contact info
        </div>

      </div>
    </div>
  </div>
</div>

